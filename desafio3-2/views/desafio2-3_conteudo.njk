{%extends "layout.njk"%}

{% block head %}

<title>Desafio3-1 - Conteudo</title>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
    rel="stylesheet">
{% endblock %}

{% block content %}
    <div class="conteudo-title-box">
        <h1 class="conteudo-title">Cursos</h1>
    </div>

    <section class="classes-box">
        <div class="cards">
            {% for curso in cursos %}
            <div class="card" id="{{curso.id}}">
                <div class="card-img-title-box"><!--Titulo e logo-->
                    <img class="card-img" src="{{curso.img_url}}" alt="Imagem curso {{curso.id}}">
                    <h2 class="card-title">{{curso.title}}</h2>
                </div>
                
                <div class="card-info"> <!--Qtd modulos e preco-->
                    <p class="card-modulos">{{curso.qtd_modules}} m√≥dulos</p>
                    <p class="card-price">{{curso.price}}</p>
                </div>
            </div>    
            {% endfor %}
        </div>
    </section>

    <div class="modal-overlay">
        <div class="modal">
            <a href="" class="modal-close">
                <i class="material-icons">close</i>
            </a>

            <a href="" class="modal-max-min">
                <i class="material-icons">maximize</i>
            </a>

            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>
    </div>

    <script src="desafio2-3_conteudo.js"></script>
{% endblock %}