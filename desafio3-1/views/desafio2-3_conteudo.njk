{%extends "layout.njk"%}

{% block head %}

<title>Desafio3-1 - Conteudo</title>
<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
    rel="stylesheet">
{% endblock %}

{% block content %}
    <div class="conteudo-title-box">
        <h1 class="conteudo-title">Cursos</h1>
    </div>

    <section class="classes-box">
        <div class="cards">

            <div class="card" id="starter">
                
                <div class="card-img-title-box"><!--Titulo e logo-->
                    <img class="card-img" src="https://skylab.rocketseat.com.br/static/64c237ccff807c054339a62d53b4b402.svg" alt="Imagem curso starter">
                    <h2 class="card-title">Starter</h2>
                </div>
                
                <div class="card-info"> <!--Qtd modulos e preco-->
                    <p class="card-modulos">5 módulos</p>
                    <p class="card-price">FREE</p>
                </div>

            </div>

            <div class="card" id="launchbase">
                
                <div class="card-img-title-box"><!--Titulo e logo-->
                    <img class="card-img" src="https://skylab.rocketseat.com.br/static/0828532024cb46921a6b5e941f8d788d.svg" alt="Imagem curso LaunchBase">
                    <h2 class="card-title">LaunchBase</h2>
                </div>
                <div class="card-info"> <!--Qtd modulos e preco-->
                    <p class="card-modulos">15 módulos</p>
                    <p class="card-price">R$ 10zão,00</p>
                </div>

            </div>

            <div class="card" id="gostack">
                
                <div class="card-img-title-box"><!--Titulo e logo-->
                    <img class="card-img" src="https://skylab.rocketseat.com.br/static/83a178a0653dab1d55e2ed7946465975.svg" alt="Imagem curso GoStack">
                    <h2 class="card-title">Go Stack</h2>
                </div>
                <div class="card-info"> <!--Qtd modulos e preco-->
                    <p class="card-modulos">17 módulos</p>
                    <p class="card-price">R$ 20tão,00</p>
                </div>

            </div>

        </div>
    </section>

    <div class="modal-overlay">
        <div class="modal">
            <a href="" class="modal-close">
                <i class="material-icons">close</i>
            </a>

            <a href="" class="modal-max-min">
                <i class="material-icons">maximize</i>
            </a>

            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>
    </div>

    <script src="desafio2-3_conteudo.js"></script>
{% endblock %}